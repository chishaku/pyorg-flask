{# A skeleton for all application pages -#}

<!DOCTYPE HTML>
<html {% block html_attrs %}{% endblock html_attrs %}>
	<head>
		<title>
			{%- if page_title is defined -%}
				{{ page_title }} - pyorg
			{%- else -%}
				pyorg
			{%- endif -%}
		</title>

		{% block head %}
			<!-- Required by bootstrap? -->
			<meta charset="utf-8">
			<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

			<!-- js -->
            <script type="text/javascript" src="{{ url_for('static', filename='lib/MathJax/MathJax.js') }}?config=TeX-AMS_HTML-full"></script>
            <script type="text/javascript" src="{{ url_for('static', filename='lib/libs.js') }}"></script>
            <script type="text/javascript" src="{{ url_for('static', filename='app.js') }}"></script>

			<!-- Site-wide CSS -->
			<link rel="stylesheet" href="{{ url_for('static', filename='styles/styles.css') }}"/>

			{% if user_head -%}
				<!-- From PYORG_HTML_HEAD config variable -->
				{{ user_head }}
			{% endif %}

		{% endblock head %}
	</head>
	<body {% block body_attrs %}{% endblock body_attrs %}>
		<!-- Content -->
		{% block body_content %}{% endblock body_content %}
	</body>
</html>