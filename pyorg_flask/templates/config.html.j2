{% extends 'rtd_base.html.j2' %}

{% set page_title = 'App configuration' %}


{% block content %}
    <h1>App configuration</h1>

    {% with messages = get_flashed_messages() %}
        <div class="messages">
			{% for message in messages %}
                {{ message }}
			{% endfor %}
        </div>
    {% endwith %}

    <p>
        <form action="{{ url_for('config.clear_cache') }}" method="POST">
			<input type="submit" value="Clear exported file cache"/>
        </form>
    </p>
{% endblock content %}
